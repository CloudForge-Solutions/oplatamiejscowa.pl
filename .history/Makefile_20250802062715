	@echo "ðŸ”§ Running ESLint with auto-fix..."
	@source ${NVM_DIR}/nvm.sh
	@nvm use ${NVM_NODE_VERSION}
	@npm run lint -- --fix
	@echo "âœ… Lint fixes applied!"

