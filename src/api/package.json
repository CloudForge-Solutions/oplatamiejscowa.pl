{
  "name": "oplata-miejscowa-functions",
  "version": "1.0.0",
  "description": "Azure Functions backend for Oplata Miejscowa - SAS token generation and payment processing",
  "main": "dist/main.js",
  "scripts": {
    "// Build Scripts": "",
    "build": "nest build",
    "build:watch": "nest build --watch --preserveWatchOutput",
    "build:webpack": "nest build --webpack",
    "build:webpack:watch": "nest build --webpack --watch --preserveWatchOutput",
    "build:production": "rimraf dist && nest build --webpack",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",

    "// Development Scripts": "",
    "dev": "concurrently \"npm run storage:start\" \"npm run storage:cors\" \"npm run nest:debug\"  --names \"STORAGE,CORS,API\" --prefix-colors \"blue,green,yellow\" --kill-others-on-fail",
    "dev:full": "concurrently \"npm run storage:start\" \"npm run build:watch\" \"npm run functions:wait && npm run functions:start\" --names \"STORAGE,BUILD,FUNC\" --prefix-colors \"blue,yellow,green\" --kill-others-on-fail",

    "// NestJS Scripts": "",
    "nest:start": "nest start --webpack",
    "nest:dev": "nest start --webpack --watch --preserveWatchOutput",
    "nest:debug": "nest start --debug --watch --preserveWatchOutput",
    "nest:production": "node dist/nest/shell/main",

    "// Azure Functions Scripts": "",
    "functions:start": "func start --worker-runtime node --verbose",
    "functions:start:api": "func start --verbose --functions api",
    "functions:wait": "sleep 3 && while [ ! -f dist/main.js ]; do sleep 1; done",

    "// Storage Scripts": "",
    "storage:start": "azurite --silent --location ./azurite-workspace --blobHost 127.0.0.1 --blobPort 10000 --queueHost 127.0.0.1 --queuePort 10001 --tableHost 127.0.0.1 --tablePort 10002",
    "storage:debug": "azurite --location ./azurite-workspace --blobHost 127.0.0.1 --blobPort 10000 --queueHost 127.0.0.1 --queuePort 10001 --tableHost 127.0.0.1 --tablePort 10002 --debug ./azurite-workspace/debug.log",
    "storage:cors": "node scripts/setup-azurite-cors.js",

    "// Production Scripts": "",
    "start": "npm run nest:production",

    "// Testing Scripts": "",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",

    "// Code Quality Scripts": "",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "dependencies": {
    "@azure/data-tables": "^13.3.1",
    "@azure/functions": "*",
    "@azure/storage-blob": "^12.28.0",
    "@azure/storage-queue": "^12.27.0",
    "@h4ad/serverless-adapter": "*",
    "@nestjs/common": "*",
    "@nestjs/config": "*",
    "@nestjs/core": "*",
    "@nestjs/platform-express": "*",
    "@nestjs/swagger": "*",
    "axios": "^1.11.0",
    "class-transformer": "*",
    "class-validator": "*",
    "express": "^5.1.0",
    "reflect-metadata": "*",
    "rimraf": "*",
    "rxjs": "*",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "*",
    "@nestjs/testing": "*",
    "@types/express": "^5.0.3",
    "@types/jest": "*",
    "@types/node": "*",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "azure-functions-core-tools": "*",
    "concurrently": "^9.2.0",
    "eslint": "*",
    "jest": "*",
    "prettier": "*",
    "rimraf": "*",
    "source-map-support": "*",
    "supertest": "*",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "*",
    "ts-loader": "*",
    "ts-node": "*",
    "tsc-watch": "*",
    "tsconfig-paths": "*",
    "tslint": "*",
    "typescript": "*",
    "webpack": "^5.101.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
