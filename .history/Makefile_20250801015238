	@echo "üìà React app handles all routes - use http://localhost:3000/dashboard"
	@$(MAKE) dev

dev-documents: ## [DEPRECATED] Documents functionality moved to Records
	@echo "üìÑ Documents functionality is now part of Records - use http://localhost:3000/records"
	@$(MAKE) dev

