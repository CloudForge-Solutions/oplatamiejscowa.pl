install: ## ðŸ“¦ Install all project dependencies
	@echo "ðŸ“¦ Installing dependencies for $(PROJECT_TITLE)..."
	@source ${NVM_DIR}/nvm.sh
	@nvm use ${NVM_NODE_VERSION} || nvm install ${NVM_NODE_VERSION}
	@echo "ðŸ“‹ Node.js version: $$(node --version)"
	@echo "ðŸ“‹ NPM version: $$(npm --version)"
	@echo "ðŸ”§ Installing dependencies..."
	@npm ci --prefer-offline --no-audit
	@echo "âœ… Dependencies installed successfully!"

setup: install ## ðŸš€ Complete project setup (install + environment check)
	@echo "ðŸš€ Setting up $(PROJECT_TITLE) development environment..."
	@$(MAKE) deps-check
	@$(MAKE) type-check
	@echo "âœ… Project setup complete! Run 'make dev' to start development."

#===================================================================================================
#=== Build Targets
#===================================================================================================

build: ## ðŸ”¨ Build application for production
	@echo "ðŸ”¨ Building $(PROJECT_TITLE) for production..."
	@source ${NVM_DIR}/nvm.sh
	@nvm use ${NVM_NODE_VERSION}
	@echo "ðŸ“‹ Node.js version: $$(node --version)"
	@echo "ðŸ“‹ NPM version: $$(npm --version)"
	@echo "ðŸ“‹ Application version: $(VERSION)-$(BUILD_ID)"
	@echo "ðŸ§¹ Cleaning previous build..."
	@rm -rf dist/
	@echo "ðŸ”¨ Building with Vite for production..."
	@NODE_ENV=production VITE_APP_VERSION=$(VERSION) VITE_BUILD_ID=$(BUILD_ID) npm run build
	@echo "âœ… Application built successfully!"
	@echo "ðŸ“ Built files are in the dist/ directory:"
	@ls -la dist/ | head -10
	@echo "ï¿½ Build size analysis:"
	@du -sh dist/
	@echo "ðŸŽ‰ Production build complete!"

build-staging: ## ðŸ”¨ Build application for staging environment
	@echo "ðŸ”¨ Building $(PROJECT_TITLE) for staging..."
	@source ${NVM_DIR}/nvm.sh
	@nvm use ${NVM_NODE_VERSION}
	@NODE_ENV=staging VITE_APP_VERSION=$(VERSION)-staging VITE_BUILD_ID=$(BUILD_ID) npm run build
	@echo "âœ… Staging build complete!"

build-analyze: build ## ðŸ“Š Build and analyze bundle size
	@echo "ðŸ“Š Analyzing bundle size..."
	@npx vite-bundle-analyzer dist/


