	@echo "ðŸ’¡ To restore, extract the desired backup manually"


#===================================================================================================
#=== Tourist Tax Payment System - Development Workflow
#===================================================================================================
#
# ðŸš€ Quick Start:
#   make setup          # Complete project setup
#   make dev            # Start development server (bypassing checks temporarily)
#   make dev-react      # Start React server directly
#
# ðŸ”§ Development:
#   make dev-strict     # Start with strict pre-checks (after fixing ESLint)
#   make test-watch     # Run tests in watch mode
#   make quality-fix    # Fix code quality issues (ESLint config needs fixing)
#
# ðŸ—ï¸  Production:
#   make ci-check       # Run all CI checks
#   make build          # Build for production
#   make serve          # Serve production build
#
# ðŸ” Quality Assurance:
#   make quality        # Run all quality checks
#   make test-coverage  # Generate test coverage
#   make security-audit # Check for security issues
#
# ðŸ—„ï¸ Azure Storage Emulator:
#   make storage-start  # Start Azurite storage emulator
#   make storage-test   # Test all storage services with curl
#   make storage-status # Check emulator status
#   make storage-stop   # Stop storage emulator
#
# ðŸ’¡ Tips:
#   - Use 'make help' to see all available targets
#   - All targets use the correct Node.js version via NVM
#   - Quality checks are integrated into the development workflow
#   - CI/CD targets are ready for automation
#   - Storage emulator uses default Azure Storage Emulator credentials
#
#===================================================================================================
#=== Azure Storage Emulator (Azurite) Targets
#===================================================================================================

storage-emulator: storage-start ## ðŸ—„ï¸ Start Azure Storage Emulator (Azurite) with all services
	@echo "âœ… Azure Storage Emulator started successfully!"
	@echo "ðŸŒ Blob Service: http://$(AZURITE_HOST):$(AZURITE_PORT_BLOB)"
	@echo "ðŸ“¬ Queue Service: http://$(AZURITE_HOST):$(AZURITE_PORT_QUEUE)"
	@echo "ðŸ“Š Table Service: http://$(AZURITE_HOST):$(AZURITE_PORT_TABLE)"
	@echo "ðŸ’¡ Use 'make storage-test' to run curl tests"
	@echo "ðŸ’¡ Use 'make storage-stop' to stop the emulator"

storage-start: ## ðŸš€ Start Azurite storage emulator in background
	@echo "ðŸš€ Starting Azure Storage Emulator (Azurite)..."
	@source ${NVM_DIR}/nvm.sh && nvm use ${NVM_NODE_VERSION}
	@echo "ðŸ“‹ Node.js version: $$(node --version)"
	@echo "ðŸ“‹ NPM version: $$(npm --version)"
	@mkdir -p $(AZURITE_WORKSPACE)
	@echo "ðŸ“ Workspace: $(AZURITE_WORKSPACE)"

	echo "ðŸ—„ï¸ Starting Azurite with all services..."
	if [ "$(AZURITE_DEBUG)" = "true" ]; then
		source ${NVM_DIR}/nvm.sh && nvm use ${NVM_NODE_VERSION} &&
		npx azurite --silent --location $(AZURITE_WORKSPACE)
			--blobHost $(AZURITE_HOST) --blobPort $(AZURITE_PORT_BLOB)
			--queueHost $(AZURITE_HOST) --queuePort $(AZURITE_PORT_QUEUE)
			--tableHost $(AZURITE_HOST) --tablePort $(AZURITE_PORT_TABLE)
			--debug $(AZURITE_WORKSPACE)/debug.log &
	else
		source ${NVM_DIR}/nvm.sh && nvm use ${NVM_NODE_VERSION} &&
		npx azurite --silent --location $(AZURITE_WORKSPACE)
			--blobHost $(AZURITE_HOST) --blobPort $(AZURITE_PORT_BLOB)
			--queueHost $(AZURITE_HOST) --queuePort $(AZURITE_PORT_QUEUE)
			--tableHost $(AZURITE_HOST) --tablePort $(AZURITE_PORT_TABLE) &
	fi
	echo "â³ Waiting for Azurite to start..."
	sleep 3
	if pgrep -f "azurite" > /dev/null; then
		echo "âœ… Azurite started successfully!"
	else
		echo "âŒ Failed to start Azurite. Check if npx and azurite are installed."
		echo "ðŸ’¡ Install with: npm install -g azurite"
		exit 1
	fi

storage-stop: ## â¹ï¸ Stop Azure Storage Emulator
	@echo "â¹ï¸  Stopping Azure Storage Emulator..."
	@if pgrep -f "azurite" > /dev/null; then
		pkill -f "azurite"
		echo "âœ… Azurite stopped successfully!"
	else
		echo "â„¹ï¸  Azurite is not running."
	fi

storage-status: ## ðŸ“Š Check Azure Storage Emulator status
	@echo "ðŸ“Š Azure Storage Emulator Status:"
	@if pgrep -f "azurite" > /dev/null; then
		echo "âœ… Status: RUNNING"
		echo "ðŸ” Process: $$(pgrep -f azurite)"
		echo "ðŸŒ Blob Service: http://$(AZURITE_HOST):$(AZURITE_PORT_BLOB) $$(curl -s -o /dev/null -w '%{http_code}' http://$(AZURITE_HOST):$(AZURITE_PORT_BLOB) 2>/dev/null | grep -q 400 && echo '(âœ… Available)' || echo '(âŒ Not responding)')"
		echo "ðŸ“¬ Queue Service: http://$(AZURITE_HOST):$(AZURITE_PORT_QUEUE) $$(curl -s -o /dev/null -w '%{http_code}' http://$(AZURITE_HOST):$(AZURITE_PORT_QUEUE) 2>/dev/null | grep -q 400 && echo '(âœ… Available)' || echo '(âŒ Not responding)')"
		echo "ðŸ“Š Table Service: http://$(AZURITE_HOST):$(AZURITE_PORT_TABLE) $$(curl -s -o /dev/null -w '%{http_code}' http://$(AZURITE_HOST):$(AZURITE_PORT_TABLE) 2>/dev/null | grep -q 400 && echo '(âœ… Available)' || echo '(âŒ Not responding)')"
	else
		echo "âŒ Status: NOT RUNNING"
		echo "ðŸ’¡ Start with: make storage-start"
	fi

storage-test: storage-test-blob storage-test-queue storage-test-table ## ðŸ§ª Run comprehensive curl tests for all storage services
	@echo ""
	@echo "âœ… All Azure Storage Emulator tests completed!"
	@echo "ðŸ’¡ Check the output above for any failures"

storage-test-blob: ## ðŸ§ª Test Blob Storage service with curl
	@echo ""
	@echo "ðŸ§ª Testing Blob Storage Service..."
	@echo "=================================="
	@if ! pgrep -f "azurite" > /dev/null; then
		echo "âŒ Azurite is not running. Start it with 'make storage-start'"
		exit 1
	fi
	@echo "ðŸ“‹ Testing Blob Service endpoints:"
	@echo ""
	@echo "1ï¸âƒ£  Basic connectivity test:"
	@curl -s -w "Status: %{http_code}\n" -o /dev/null "http://$(AZURITE_HOST):$(AZURITE_PORT_BLOB)/$(AZURITE_ACCOUNT)"
	@echo ""
	@echo "2ï¸âƒ£  Connection string for your app:"
	@echo "AccountName=$(AZURITE_ACCOUNT);AccountKey=$(AZURITE_KEY);DefaultEndpointsProtocol=http;BlobEndpoint=http://$(AZURITE_HOST):$(AZURITE_PORT_BLOB)/$(AZURITE_ACCOUNT);QueueEndpoint=http://$(AZURITE_HOST):$(AZURITE_PORT_QUEUE)/$(AZURITE_ACCOUNT);TableEndpoint=http://$(AZURITE_HOST):$(AZURITE_PORT_TABLE)/$(AZURITE_ACCOUNT);"
	@echo ""
	@echo "3ï¸âƒ£  Test with Azure CLI (if installed):"
	@echo "az storage container list --connection-string 'AccountName=$(AZURITE_ACCOUNT);AccountKey=$(AZURITE_KEY);DefaultEndpointsProtocol=http;BlobEndpoint=http://$(AZURITE_HOST):$(AZURITE_PORT_BLOB)/$(AZURITE_ACCOUNT);'"
	@echo ""
	@echo "4ï¸âƒ£  Test blob endpoint directly:"
	@curl -s -I "http://$(AZURITE_HOST):$(AZURITE_PORT_BLOB)/$(AZURITE_ACCOUNT)" | head -3
	@echo ""
	@echo "âœ… Blob Storage tests completed!"

storage-test-queue: ## ðŸ§ª Test Queue Storage service with curl
	@echo ""
	@echo "ðŸ§ª Testing Queue Storage Service..."
	@echo "==================================="
	@if ! pgrep -f "azurite" > /dev/null; then
		echo "âŒ Azurite is not running. Start it with 'make storage-start'"
		exit 1
	fi
	@echo "ðŸ“‹ Testing Queue Service endpoints:"
	@echo ""
	@echo "1ï¸âƒ£  Basic connectivity test:"
	@curl -s -w "Status: %{http_code}\n" -o /dev/null "http://$(AZURITE_HOST):$(AZURITE_PORT_QUEUE)/$(AZURITE_ACCOUNT)"
	@echo ""
	@echo "2ï¸âƒ£  Queue endpoint test:"
	@curl -s -I "http://$(AZURITE_HOST):$(AZURITE_PORT_QUEUE)/$(AZURITE_ACCOUNT)" | head -3
	@echo ""
	@echo "3ï¸âƒ£  Test with Azure CLI (if installed):"
	@echo "az storage queue list --connection-string 'AccountName=$(AZURITE_ACCOUNT);AccountKey=$(AZURITE_KEY);DefaultEndpointsProtocol=http;QueueEndpoint=http://$(AZURITE_HOST):$(AZURITE_PORT_QUEUE)/$(AZURITE_ACCOUNT);'"
	@echo ""
	@echo "âœ… Queue Storage tests completed!"

storage-test-table: ## ðŸ§ª Test Table Storage service with curl
	@echo ""
	@echo "ðŸ§ª Testing Table Storage Service..."
	@echo "==================================="
	@if ! pgrep -f "azurite" > /dev/null; then
		echo "âŒ Azurite is not running. Start it with 'make storage-start'"
		exit 1
	fi
	@echo "ðŸ“‹ Testing Table Service endpoints:"
	@echo ""
	@echo "1ï¸âƒ£  Basic connectivity test:"
	@curl -s -w "Status: %{http_code}\n" -o /dev/null "http://$(AZURITE_HOST):$(AZURITE_PORT_TABLE)/$(AZURITE_ACCOUNT)"
	@echo ""
	@echo "2ï¸âƒ£  Table endpoint test:"
	@curl -s -I "http://$(AZURITE_HOST):$(AZURITE_PORT_TABLE)/$(AZURITE_ACCOUNT)" | head -3
	@echo ""
	@echo "3ï¸âƒ£  Test with Azure CLI (if installed):"
