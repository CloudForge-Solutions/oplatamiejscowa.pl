# Tourist Tax Payment System - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development
VITE_APP_NAME="Op≈Çata Miejscowa Online"
VITE_APP_VERSION=1.0.0

# imoje Payment Gateway Configuration
# Get these values from your imoje merchant account
VITE_IMOJE_MERCHANT_ID=your-merchant-id
VITE_IMOJE_SERVICE_ID=your-service-id
VITE_IMOJE_SERVICE_KEY=your-service-key
VITE_IMOJE_ENVIRONMENT=sandbox
VITE_IMOJE_API_URL=https://sandbox.imoje.pl/api/v1
VITE_IMOJE_JS_URL=https://sandbox.imoje.pl/js/imoje.min.js

# Production imoje URLs (uncomment for production)
# VITE_IMOJE_API_URL=https://api.imoje.pl/v1
# VITE_IMOJE_JS_URL=https://js.imoje.pl/imoje.min.js

# Application URLs
VITE_APP_BASE_URL=http://localhost:3000
VITE_APP_RETURN_URL=http://localhost:3000/payment-result
VITE_APP_NOTIFY_URL=http://localhost:3000/api/payment-notification

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_MOCK_PAYMENTS=true

# Storage Configuration
VITE_STORAGE_QUOTA_WARNING_THRESHOLD=0.8
VITE_STORAGE_CLEANUP_DAYS=365

# Supported Cities (comma-separated city codes)
VITE_SUPPORTED_CITIES=KRK,WAW,GDN,WRO,POZ,ZAK

# Default Language and Currency
VITE_DEFAULT_LANGUAGE=pl
VITE_DEFAULT_CURRENCY=PLN

# Contact Information
VITE_SUPPORT_EMAIL=support@oplatamiejscowa.pl
VITE_PRIVACY_EMAIL=privacy@oplatamiejscowa.pl

# Analytics (optional)
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# VITE_HOTJAR_ID=XXXXXXX

# Sentry Error Tracking (optional)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
