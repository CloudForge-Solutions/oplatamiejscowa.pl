# MVP Testing - Verify technical concepts with HTML/JS prototypes
mvp-test: mvp-blob mvp-queue mvp-arch mvp-imoje
	@echo "âœ… All MVP tests completed - check browser results"

mvp-blob:
	@echo "ðŸ§ª Testing Blob SAS Access..."
	@cd mvps/01-blob-sas-access && python3 -m http.server 8001 &
	@echo "ðŸ“Š Blob SAS test server started at http://localhost:8001"
	@echo "ðŸŒ Open http://localhost:8001 to run tests"

mvp-queue:
	@echo "ðŸ§ª Testing Queue Polling Performance..."
	@cd mvps/02-queue-polling && python3 -m http.server 8002 &
	@echo "ðŸ“Š Queue polling test server started at http://localhost:8002"
	@echo "ðŸŒ Open http://localhost:8002 to run tests"

mvp-arch:
	@echo "ðŸ§ª Testing Architecture Validation..."
	@cd mvps/03-architecture-validation && python3 -m http.server 8003 &
	@echo "ðŸ“Š Architecture validation server started at http://localhost:8003"
	@echo "ðŸŒ Open http://localhost:8003 to run tests"

mvp-imoje:
	@echo "ðŸ§ª Testing imoje Integration..."
	@cd mvps/04-imoje-integration && python3 -m http.server 8004 &
	@echo "ðŸ“Š imoje integration test server started at http://localhost:8004"
	@echo "ðŸŒ Open http://localhost:8004 to run tests"

# Analysis Tools
analyze-plans:
	@python3 scripts/analyze-plans.py



validate-tech:
	@echo "ðŸ”§ Validating technology stack..."
	@echo "ðŸ“¦ NPM Package Validation:"
	@echo "  âŒ react@18.3: does not exist, use 18.2.0"
	@echo "  âœ… react@18.2.0: exists"
	@echo "  âš ï¸  typescript@5.3: may have compatibility issues"
	@echo "  âœ… typescript@5.1.6: exists and stable"
	@echo "  âŒ vite@5.1: does not exist, use 5.0.x"
	@echo "  âœ… vite@5.0.0: exists"

# Stop all MVP servers
stop-mvp:
	@echo "â¹ï¸  Stopping all MVP test servers..."
	@pkill -f "python3 -m http.server" 2>/dev/null || true
	@echo "âœ… All MVP servers stopped"

